<%- include ("../general/header") %>
<%- include ("./navbar") %>
<link rel="stylesheet" href="/assets/file/upload.css">

<div id="container" class="container uploadContent">
  <div class="uploadInfo">
        <div class="form-inline uploadPadding">
           <div class="uploadTitle">이름</div>
            <input class="upInput form-control input" id="fileTitle" type="text">
        </div>
        <div class="form-inline row uploadPadding">
           <div class="form-inline uploadPadding">
              <div class="uploadTitle">상세</div>
              <textarea rows="8" class="form-control input upInput" id="fileValue" type="text"></textarea>
           </div>
        </div>
        <div class="form-inline uploadPadding">
           <div class="uploadTitle">파일</div>
           <div class="input-group upInput input-group-md">
              <div class="custom-file">
                 <input multiple="" type="file" name="File" id="File" class="custom-file-input form-control-md" @change="fileChange">
                 <label id="fileLabel" class="custom-file-label"></label>
              </div>
           </div>
        </div>
        <div style="text-align:center; margin-top:40px">
           <div style="width: 60%; margin:0 auto 0 auto">
              <div style="height: 25px; margin-bottom: 15px" class="progress">
                 <div id="progress-bar" class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                    0%
                 </div>
              </div>
              <div class="d-grid gap-2">
                  <button type="button" class="btn btn-block btn-primary" id="upload" disabled="disabled" @click="uploadFile">업로드</button>
              </div>
           </div>
        </div>
  </div>
</div>

<%- include ('./file-footer') %>
<%- include ('../general/script') %>
<script src="/assets/file/upload.js"></script>
<script src="/assets/file/navbar.js"></script>
<%- include ('../general/footer') %>